{
    "name": "ngspice-mcp",
    "description": "Model Context Protocol server for ngspice circuit simulation",
    "authors": ["Garret Noble"],
    "copyright": "Copyright Â© 2024, Garret Noble",
    "license": "MIT",
    "dependencies": {
        "mcp": {
            "version": "*"
        }
    },
    "configurations": [
        {
            "name": "server",
            "targetType": "executable",
            "targetName": "ngspice-mcp",
            "mainSourceFile": "source/app.d",
            "sourcePaths": ["source"],
            "importPaths": ["source"],
            "excludedSourceFiles": ["source/test/*"]
        },
        {
            "name": "library",
            "targetType": "library",
            "targetName": "ngspice-mcp",
            "sourcePaths": ["source"],
            "importPaths": ["source"],
            "excludedSourceFiles": ["source/test/*"]
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "targetName": "ngspice-mcp-test",
            "mainSourceFile": "source/app.d",
            "dependencies": {
                "unit-threaded": "~>2.1.2"
            },
            "sourcePaths": ["source", "source/test"],
            "importPaths": ["source"]
        }
    ],
    "buildRequirements": ["allowWarnings"],
    "libs": ["ngspice"]
}
